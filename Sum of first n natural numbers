import java.util.Scanner;
class Main {
  public static void main(String[] args) {
    Scanner sc = new Scanner(System.in);
    int n = sc.nextInt();
    int res = sum(n);
    System.out.println(res);
  }
  static int sum(int n) 
  {
    int sum = 0;
    for(int i = 1; i<=n ; i++ )
      {
        sum = sum + i;
      }
    return sum;
  }
}
